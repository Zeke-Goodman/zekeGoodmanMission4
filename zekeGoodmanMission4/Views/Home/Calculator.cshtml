@{
    ViewData["Title"] = "Calculator";
}
<h1>@ViewData[""]</h1>

<div class="container" style="width: 50%">
    <h1 class="text-center">Calculate How Much It Would Cost To Be Tutored!</h1>
    <p class="lead">Welcome to our tutoring cost calculator! Use this tool to estimate the cost of hiring a tutor to teach you how to play pickleball.</p>
    <form id="hourlyRateForm">
        <div class="mb-3">
            <label for="hours" class="form-label">Enter number of hours:</label>
            <input type="number" class="form-control" id="hours" name="hours" min="0" required>
            <div id="hoursError" class="form-text" style="color: red;"></div>
        </div>
        <div class="mb-3">
            <label for="hourlyRate" class="form-label">Hourly rate:</label>
            <input type="text" class="form-control" id="hourlyRate" name="hourlyRate" value="30" readonly>
        </div>
        <div class="mb-3">
            <button type="button" class="btn btn-primary" onclick="calculateTotal()">Calculate Total</button>
        </div>
        <div class="mb-3">
            <label for="total" class="form-label">Total:</label>
            <input type="text" class="form-control" id="total" name="total" readonly>
        </div>
    </form>
</div>
